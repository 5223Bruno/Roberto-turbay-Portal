---
import Layout from '../layouts/Layout.astro';
---
<Layout>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold">Contato</h1>
    <p class="mt-2">Telefone: (xx) xxxx-xxxx</p>
    <p>WhatsApp: <a href="https://wa.me/559999999999" target="_blank">(99) 99999-9999</a></p>
    <p>Instagram: <a href="https://instagram.com/seu_instagram" target="_blank">@seu_instagram</a></p>

    <form action="https://formspree.io/f/SEU_ENDPOINT" method="POST" class="mt-4 max-w-lg">
      <label class="block mt-2">Nome <input name="name" required class="w-full border p-2 rounded" /></label>
      <label class="block mt-2">E-mail <input name="email" type="email" required class="w-full border p-2 rounded" /></label>
      <label class="block mt-2">Mensagem <textarea name="message" rows="5" class="w-full border p-2 rounded"></textarea></label>
      <button type="submit" class="mt-4 px-4 py-2 rounded shadow">Enviar</button>
    </form>
  </main>
</Layout>
