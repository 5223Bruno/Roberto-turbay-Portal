---
import Base from "../layouts/Base.astro";
import Hero from "../components/Hero.astro";
import DestaquesGrid from "../components/DestaquesGrid.astro";
import NewsList from "../components/NewsList.astro";
import ContactPanel from "../components/ContactPanel.astro";

/* Exemplos de dados — substitua pelos reais quando quiser */
const destaqueItems = [
  { image: "/img/placeholder-news.jpg", title: "Matrículas Abertas", excerpt: "Inscrições para 2026 — confira prazos e documentos necessários.", badge: "Urgente" },
  { image: "/img/placeholder-event.jpg", title: "Feira de Ciências", excerpt: "Projetos dos alunos em exposição na quadra.", badge: "Evento" },
  { image: "/img/placeholder-calendar.jpg", title: "Calendário Escolar", excerpt: "Datas importantes: provas, recessos e reuniões.", badge: "Info" }
];

const comunicados = [
  { id: "1", title: "Reunião de pais", date: "21/11/2025", excerpt: "Reunião de pais às 18h na quadra da escola.", image: "/img/placeholder-news.jpg", href: "/noticias/reuniao-pais" },
  { id: "2", title: "Entrega de notas", date: "10/12/2025", excerpt: "Entrega de notas do semestre.", image: "/img/placeholder-news.jpg", href: "/noticias/entrega-notas" },
  { id: "3", title: "Férias escolares", date: "20/12/2025", excerpt: "Início do recesso escolar.", image: "/img/placeholder-news.jpg", href: "/noticias/ferias" }
];
---
<Base>
  <!-- Hero -->
  <Hero
    title="Bem-vindo à Escola Roberto Turbay"
    subtitle="Educação com respeito, inovação e cuidado — formando cidadãos."
    ctas={[
      { label: "Conheça a Equipe", href: "/equipe" },
      { label: "Comunicados", href: "/noticias", variant: "secondary" }
    ]}
  />

  <!-- Espaçamento para evitar overlap visual com o hero -->
  <section style="margin-top: -60px;"></section>

  <!-- Container principal -->
  <div style="margin-top: 16px;">

    <!-- Destaques (grid de cards) -->
    <section class="section-block">
      <h2 class="section-title">Destaques</h2>
      <DestaquesGrid items={destaqueItems} />
    </section>

    <!-- Comunicados (lista) -->
    <section class="section-block" style="margin-top:18px;">
      <h2 class="section-title">Últimos Comunicados</h2>
      <div style="margin-top:12px;">
        <NewsList posts={comunicados} />
      </div>
    </section>

    <!-- Pequena seção institucional -->
    <section class="section-block" style="margin-top:18px;">
      <h2 class="section-title">Nossa Missão</h2>
      <p class="muted">Promover educação de qualidade, com inclusão, respeito e preparo para a cidadania. Projetos pedagógicos focados na formação integral dos alunos.</p>
    </section>

    <!-- ContactPanel (novo bloco com imagem + logo à direita) -->
    <ContactPanel
      bgImage="/img/placeholder-hero.jpg"
      logo="/img/logo-white.png"
      schoolName="Escola Roberto Turbay"
      shortName="ERT"
      addressLines={["Rua Exemplo, 123 — Ariquemes - RO", "CEP: 76.870-450"]}
      telefone="(69) 3535-2931"
      whatsapp="(69) 9 9999-9999"
      mapHref="#"
      ctaScheduleHref="/contato"
      ctaWhatsappHref="https://wa.me/5569xxxxxxxx"
    />

  </div>
</Base>
