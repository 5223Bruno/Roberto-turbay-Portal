---
// src/layouts/Base.astro
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const siteTitle = "Escola Roberto Turbay";
---
<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{siteTitle}</title>
    <meta name="theme-color" content="var(--color-primary)" />
    <slot name="head" />
  </head>

  <body class="site-root min-h-screen flex flex-col" style="background: var(--bg); color: var(--text);">
    <a href="#content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:bg-white focus:px-3 focus:py-2 focus:rounded shadow">
      Ir para o conteúdo
    </a>

    <!-- Header -->
    <Header />

    <!-- Main wrapper: mantém app-main para compatibilidade -->
    <main id="content" class="app-main flex-grow">
      <div class="container-max mx-auto px-4">
        <slot />
      </div>
    </main>

    <!-- Footer -->
    <Footer />

    <script>
      try {
        const anoEl = document.getElementById('ano-atual');
        if (anoEl) anoEl.textContent = new Date().getFullYear();
      } catch (e) {}
    </script>
  </body>
</html>
