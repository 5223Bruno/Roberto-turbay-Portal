<section class="hero-institucional">
  <!-- IMAGEM NATALINA (define a altura do bloco) -->
  <img
    src="/img/hero-natal.png"
    alt="Decoração natalina"
    class="hero-bg"
  />

  <!-- OVERLAY -->
  <div class="hero-overlay"></div>

  <!-- TEXTO -->
  <div class="hero-content animate-fade-up">
    <h1 class="hero-title">
      <span class="thin">Bem-vindo à</span>
      <span class="strong highlight">Escola Roberto Turbay</span>
    </h1>

    <p class="hero-subtitle">
      Projeto Burareiro de Educação Integral
    </p>
  </div>
</section>

<style>
.hero-institucional {
  position: relative;
  width: 100%;
  overflow: hidden;
}

/* IMAGEM REAL — NÃO CORTA */
.hero-bg {
  width: 100%;
  height: auto;
  display: block;
}

/* OVERLAY SUAVE */
.hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    180deg,
    rgba(8,63,115,0.15),
    rgba(10,92,160,0.22)
  );
  pointer-events: none;
}

/* TEXTO */
.hero-content {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
  padding: 2rem 1.5rem;
  z-index: 2;
}

.hero-title {
  margin: 0;
  line-height: 1.15;
}

.hero-title .thin {
  display: block;
  font-weight: 400;
  font-size: clamp(1.5rem, 3vw, 2.3rem);
  letter-spacing: 0.04em;
}

.hero-title .strong {
  display: block;
  font-weight: 900;
  font-size: clamp(2.6rem, 6vw, 4.6rem);
}

.hero-title .highlight {
  color: var(--accent);
  text-shadow: 0 6px 22px rgba(0,0,0,0.35);
}

.hero-subtitle {
  margin-top: 1.1rem;
  font-size: 1.15rem;
  font-weight: 600;
  color: rgba(255,255,255,0.95);
  max-width: 720px;
}

/* ANIMAÇÃO */
@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(24px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-up {
  animation: fadeUp 0.9s ease-out both;
}
</style>
